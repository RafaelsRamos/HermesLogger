<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_background">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:hint="Search"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clear_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/caps_search_image_view"
        android:layout_width="@dimen/search_icons_size"
        android:layout_height="@dimen/search_icons_size"
        android:layout_marginEnd="8dp"
        android:alpha="0.8"
        android:padding="5dp"
        android:src="@drawable/ic_match_case_disabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clear_image_view"
        android:layout_width="@dimen/search_icons_size"
        android:layout_height="@dimen/search_icons_size"
        android:alpha="0.8"
        android:padding="3dp"
        android:src="@drawable/ic_clear"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/caps_search_image_view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>