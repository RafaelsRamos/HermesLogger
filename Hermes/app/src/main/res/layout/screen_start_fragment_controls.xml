<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <Button
        android:id="@+id/initialize_hermes"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Enable/Disable Hermes"
        app:layout_constraintEnd_toStartOf="@+id/plant_timber_tree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plant_timber_tree"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Plant Hermes tree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/initialize_hermes"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>