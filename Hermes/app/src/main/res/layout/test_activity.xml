<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fire_single_log_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:text="Fire single log"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:hint="Message"
        app:layout_constraintTop_toBottomOf="@+id/fire_single_log_tv"
        tools:layout_editor_absoluteX="32dp" />

    <EditText
        android:id="@+id/edit_text_extra_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:hint="Extra information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_message" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/single_logs_ll"
        tools:layout_editor_absoluteX="8dp" />


    <TextView
        android:id="@+id/fire_automatic_logs_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:text="Fire logs automatically"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/duration_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Duration between logs 1000 ms"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintStart_toStartOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintTop_toBottomOf="@+id/fire_automatic_logs_tv" />

    <SeekBar
        android:id="@+id/simpleSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="5dp"
        android:max="5000"
        android:min="100"
        android:progress="1000"
        app:layout_constraintEnd_toEndOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintStart_toStartOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintTop_toBottomOf="@id/duration_message"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/extra_info_data_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Extra info data type"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintStart_toStartOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintTop_toBottomOf="@+id/simpleSeekBar" />

    <RadioGroup
        android:id="@+id/extra_info_type_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintStart_toStartOf="@+id/fire_automatic_logs_tv"
        app:layout_constraintTop_toBottomOf="@+id/extra_info_data_type">

        <RadioButton
            android:id="@+id/normal_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:checked="true"
            android:text="Plaint text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/xml_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:checked="false"
            android:text="XML"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/json_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:checked="false"
            android:text="Json"
            android:textSize="12sp" />
    </RadioGroup>

    <Button
        android:id="@+id/generate_logs_button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:stateListAnimator="@null"
        android:text="Generate automatic logs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/single_logs_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_extra_message">

        <Button
            android:id="@+id/button_success"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="Success"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_error"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="Error"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_debug"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="Debug"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_warning"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="Warning"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button_info"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="Info"
            android:textSize="10sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>