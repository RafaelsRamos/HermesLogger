<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        style="@style/OverviewItemFont"
        android:id="@+id/log_id_tv"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"

        tools:text="W-1" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/log_id_tv"

        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:15 pm" />

    <TextView
        style="@style/OverviewItemFont"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/copy_image_view"
        app:layout_constraintStart_toEndOf="@id/log_id_tv"

        app:layout_constraintTop_toBottomOf="@+id/date"
        tools:text="My info title" />

    <ImageView
        android:id="@+id/copy_image_view"
        android:layout_width="@dimen/info_item_icon_dimens"
        android:layout_height="@dimen/info_item_icon_dimens"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/black"
        tools:ignore="UseAppTint" />



</androidx.constraintlayout.widget.ConstraintLayout>